<div id="UserManagementPage">
    <h2><b><u>User Management</u></b></h2>
    <!-- searching (filter data) -->
    <div id="Searching">
        <label for="name" style="padding-right:20px">Search By: </label>
        <select name="data" id="data">
            <option value="Name">Name</option>
            <option value="Email">Email</option>
        </select>
        <input type="text" id="SearchInputID" name="SearchInput" placeholder="Enter search term">
        <button type="button" id="FilterID" onclick="searchUsers()">Search</button>  <!-- filter  -->
    </div>

    <!-- buttons - 3 options (create, edit, deactivate) -->
    <ul id="UserDataManagement">
        <li> <button type="button" id="CreateAccID" onclick="showCreateUserForm()">Create New User</button></li>
        <li> <button type="button" id="EditAccID" onclick="showEditUserForm()">Edit User Account</button></li>
        <li> <button type="button" id="DeactivateAccID" onclick="showDeactivateUserForm()">Deactivate Account</button></li>
        <li> <button type="button" id="ResetPasswordID" onclick="resetPassword()">Reset Password</button></li>
    </ul>

    <!-- create new users -->
    <div id="CreateNewUserSection" style="display:none;">
        <label for="username">User Name</label>
        <input type="text" id="CreateUsernameID" name="Username" placeholder="Username" />
        <label for="email">Email Address</label>
        <input type="email" id="CreateEmailID" name="Email" placeholder="Email Address" />
        <label for="password">Password</label>
        <input type="password" id="CreatePasswordID" name="Password" placeholder="Password" />
        <label for="hpnumber">Phone Number</label>
        <input type="number" id="CreatePhoneNumberID" name="PhoneNumber" placeholder="Phone Number" />
        <label for="address">Address</label>
        <input type="text" id="CreateAddressID" name="Address" placeholder="Address" />
        <button type="button" id="SaveCreateID" onclick="createUser()">Save</button>
    </div>

    <!-- edit users -->
    <div id="EditNewUserSection" style="display:none;">
        <label for="username">User Name</label>
        <input type="text" id="EditUsernameID" name="Username" placeholder="Username" />
        <label for="email">Email Address</label>
        <input type="email" id="EditEmailID" name="Email" placeholder="Email Address" />
        <label for="password">Password</label>
        <input type="password" id="EditPasswordID" name="Password" placeholder="Password" />
        <label for="hpnumber">Phone Number</label>
        <input type="number" id="EditPhoneNumberID" name="PhoneNumber" placeholder="Phone Number" />
        <label for="address">Address</label>
        <input type="text" id="EditAddressID" name="Address" placeholder="Address" />
        <button type="button" id="SaveEditID" onclick="editUser()">Save</button>
    </div>

    <!-- deactivate users -->
    <div id="DeactivateUserSection" style="display:none;">
        <label for="username">Deactivate User Name</label>
        <input type="text" id="DeactivateUsernameID" name="Username" placeholder="Username" />
        <button type="button" id="DeactivateButtonID" onclick="deactivateUser()">Deactivate</button>
    </div>

    <!-- display users data in table -->
    <table border="2" id="UserManagementTable">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email Address</th>
                <th>Phone Number</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            <!-- table body will be populated by JavaScript -->
        </tbody>
    </table>
</div>