<div id="TransactionManagementPage">
    <h2><b><u>Transaction Management</u></b></h2>
    <!-- recepient's name, date, amount, description  -->
    <div id="SearchDataID">
        <label for="name" style="padding-right:10px"> <b>Search By: </b></label>
        <select name="data" id="SearchDataOption">
            <option value="Name">Name</option>
            <option value="AccNumber">Account Number</option>
        </select>
        <button type="button" style="margin-left:10px" id="OkID" onclick="acceptDataAndUnhideTextBox()">OK </button>  <!-- accept (OK button)  -->
        <!-- either one will show up depends on the option chosen (username&button / accnum&button) -->
        <input type="hidden" id="UserNameID" name="UsernameID" placeholder="User Name">
        <input type="hidden" id="AccountNumberID" name="AccountNumberID" placeholder="Account Number">
        <button hidden type="button" id="SearchID" onclick="searchInfo()">Search</button>  <!-- search (Search button)  -->
    </div>

    <!-- user's transaction table form  -->
    <table border="2" id="TransactionHistoryTable">
        <thead>
            <!-- header  -->
            <tr>
                <!-- table row  -->
                <th>Date</th> <!-- head  -->
                <th>User</th>
                <th>Recipient Name</th>
                <th>Amount</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <!-- table body  -->
        </tbody>
    </table>
</div>