<div id="TransactionManagementPage">
    <h2><b><u>Transaction Management</u></b></h2>
    <div id="SearchDataID">
        <label for="name" style="padding-right:10px"> <b>Search By: </b></label>
        <select name="data" id="SearchDataOption">
            <option value="name">Transaction Name</option>
            <option value="type">Transaction Type</option>
            <option value="amount">Amount</option>
        </select>
        <input type="text" id="SearchInputID" name="SearchInput" placeholder="Enter search term">
        <button type="button" id="SearchID" onclick="searchTransactions()">Search</button>
    </div>

    <table border="2" id="TransactionHistoryTable">
        <thead>
            <tr>
                <th onclick="sortTransactions('date')">Date <span id="dateSortIcon" class="sort-icon"></span></th>
                <th onclick="sortTransactions('name')">Transaction Name <span id="nameSortIcon" class="sort-icon"></span></th>
                <th onclick="sortTransactions('amount')">Amount <span id="amountSortIcon" class="sort-icon"></span></th>
                <th onclick="sortTransactions('type')">Type <span id="typeSortIcon" class="sort-icon"></span></th>
                <th>Transaction ID</th>
            </tr>
        </thead>
        <tbody>
            <!-- table body will be populated by JavaScript -->
        </tbody>
    </table>
</div>

<script>
    // This ensures loadTransactions is called when the page loads
    document.addEventListener('DOMContentLoaded', loadTransactions);
</script>