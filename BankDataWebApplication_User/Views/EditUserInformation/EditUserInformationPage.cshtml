<div id="EditUserInformationPage">
    <h2>Edit User Information</h2>
    <form id="editUserForm">
        <div>
            <label for="UsernameID">New Username (optional)</label>
            <input type="text" id="UsernameID" name="Username" placeholder="New Username" />
        </div>
        <div>
            <label for="EmailID">Email Address</label>
            <input type="email" id="EmailID" name="Email" placeholder="Email Address" required />
        </div>
        <div>
            <label for="PhoneNumberID">Phone Number</label>
            <input type="tel" id="PhoneNumberID" name="PhoneNumber" placeholder="Phone Number" />
        </div>
        <div>
            <label for="PasswordID">New Password (optional)</label>
            <input type="password" id="PasswordID" name="Password" placeholder="New Password" />
        </div>
        <button type="button" id="SaveID" onclick="updateUserInformation()">Save Changes</button>
    </form>
</div>